{
  "extends": "@tsconfig/node18/tsconfig.json",
  "exclude": ["node_modules", "**/dist"],
  "include": ["src/*.ts"],
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
      "declaration": true,
      "baseUrl": "./src/",
      "lib": ["dom", "dom.iterable", "esnext"],
      "target": "ES2022",
      "strict": true,
      "outDir": "./dist"
  }
}
