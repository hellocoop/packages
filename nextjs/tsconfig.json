{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": ["src"],
  "exclude": ["node_modules", "./**/dist"],
  "compilerOptions": {
      "paths": {
        "@hellocoop/types": ["../../types/types.ts"],
        "handlers": ["./src/handlers"],
        "frontend": ["./src/frontend"],
        "lib": ["./src/lib"],
      },
      "declarationMap": true,
      "declaration": true,
      "baseUrl": "./src/",
      "lib": ["dom", "dom.iterable", "esnext"],
      "target": "es2019",
      "jsx": "react",
      "strict": true,
      "outDir": "./dist"
  }
}
